func execute():
	clear_player_choices()
	
	var points = Character.variables.get_value(\"greenroom_points\", 0)
	points += 1
	Character.variables.set_value(\"greenroom_points\", points)
	
	say_headless(\"You now have %s points!\" % str(points))
	
	choice_call(\"OK\", \"on_ok\")

func on_ok():
	get_parent().execute()
