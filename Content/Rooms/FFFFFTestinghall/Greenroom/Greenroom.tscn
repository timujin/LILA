script/source = "extends CutsceneEngine

func execute():
	clear_player_choices()
	var number_of_visits = Character.variables.get_value(\"greenroom_visits\", 0)
	Character.variables.set_value(\"greenroom_visits\", number_of_visits+1)
	var icon = preload(\"res://Assets/Placeholders/advancedcreatureattack.png\")
	var text = \\
	\"\"\"This is the %s time you've visited this shrine.
	\"\"\" % str(number_of_visits)
	
	say_head(icon, text)
	say_headless(\"What do you want me t you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?What do you want me to do now?\")
	
	var points = Character.variables.get_value(\"greenroom_points\", 0)

	choice_call(\"Give me 1 point\", \"on_give_me_point\")
	
	var spend_points = choice_call(\"Spend 3 points to hear a joke\", \"on_give_me_joke\")
	spend_points.add_req(\\
		preload(\"res://Assets/Placeholders/advancedcreatureattack.png\"),\\
		\"-3\", \"Costs 3 points.\", \"You have: %s\" % str(points),\\
		points >= 3
	)
	spend_points.set_active(points >= 3)

	choice_call(\"Use an item...\", \"open_use_item\")
	choice_call(\"Good bye!\", \"end_cutscene\")	
	
func open_use_item():
	open_item_popup(\"only_knife_allowed\", \"use_item\")
	
func only_knife_allowed(items):
	return items[0].display_name == \"Knife\"
	
func use_item(item):
	clear_player_choices()
	ModeController.window.add_talking_head(null,\"This is the 10th time you've showed %s in class!\" % item.display_name)
	$YouGetPoints.execute()
	
func on_give_me_point():
	add_choice_record(\"Give me 1 point\")
	$YouGetPoints.execute()
	
func on_give_me_joke():
	add_choice_record(\"Spend 3 points to hear a joke\")
	$YouGetJoke.execute()
