script/source = "extends CanvasLayer

onready var reasons = []

func _ready():
	$Panel.visible = false
	
func bring_me_up(reason):
	assert(reason.has_method(\"activate\"))
	reasons.append(reason)
	$Panel.visible = true


func _on_Panel_pressed():
	if reasons.size() < 1:
		printerr(\"OverrideInteraction panel working incorrectly\")
	elif reasons.size() == 1:
		$Panel.visible = false
		reasons[0].activate()
		reasons = []
	elif reasons.size() > 1:
		reasons[0].activate()
		reasons.pop_front()
"

