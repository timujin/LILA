script/source = "extends Panel


func swap_to_left():
	self.anchor_bottom = 1
	self.anchor_top = 0
	self.anchor_left = 0
	self.anchor_right = 0
	self.rect_position = Vector2(30, 30)

func swap_to_right():
	self.anchor_bottom = 1
	self.anchor_top = 0
	self.anchor_left = 1
	self.anchor_right = 1
	self.rect_position = Vector2(get_viewport().size.x - 30 - self.rect_size.x, 30)

\"\"\"
var left = false
func _input(event):
	if event.is_action_pressed(\"dismiss\"):
		if left:
			left = false
			swap_to_right()
		else:
			left = true
			swap_to_left()
\"\"\"
"

