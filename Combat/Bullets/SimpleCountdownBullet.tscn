var countdown = null
var total_duration = 0.0

func run(duration:float=3.0):
	countdown = Timer.new()
	countdown.connect(\"timeout\",self,\"_on_timer_timeout\") 
	add_child(countdown)
	countdown.start(duration)
	total_duration = duration
	
func _process(delta):
	if countdown != null:
		display_timer()
		
func display_timer():
	$\"TextureProgress\".value = 100* (1 - countdown.time_left / total_duration)
	
func _on_timer_timeout():
	emit_signal(\"bullet_finished\")
	queue_free()
	
func activate():
	emit_signal(\"bullet_activated\")
	queue_free()
	
func _ready():
	pass#run()"

