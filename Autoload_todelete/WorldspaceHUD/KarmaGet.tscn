script/source = "extends CanvasLayer

signal dismissed

func render(karmainventory):
	var species = karmainventory.species
	var level   = karmainventory.level
	var xp      = karmainventory.xp
	var to_next = species.curve(level)
	
	$\"Modal/Panel/Icon\".texture = species.icon
	$\"Modal/Panel/Name\".text = species.title
	$\"Modal/Panel/Desc\".text = species.description
	$\"Modal/Panel/Level\".text = str(level)
	$\"Modal/Panel/ProgressBar\".value = 100.0 * xp / to_next

		
func _ready():
	pass #render(\"GOEEsNote\", 77)

func _on_Button_pressed():
	emit_signal(\"dismissed\")
	queue_free()
