script/source = "extends Node

onready var devc = $\"/root/DeveloperConsole\"

################################
# SKILLS
################################

onready var skillrules = preload(\"res://Rules/Skills.gd\")
onready var skill_scores:Dictionary = skillrules.default_skills()

func get_skill(skill:String):
	if skill_scores.has(skill):
		return skill_scores.get(skill, 0)
	else:
		devc.echoerr(\"Skill not found: %s\" % skill)
		return 0
		
func set_skill(skill:String, value:int):
	if skill_scores.has(skill):
		skill_scores[skill] = value
	else:
		devc.echoerr(\"Skill not found: %s\" % skill)
		
func set_all_skills(skills:Dictionary):
	self.skill_scores = skills
"

