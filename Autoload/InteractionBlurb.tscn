script/source = "extends Node2D

signal dismissed

onready var p = $Control
onready var t = $Control/PopupPanel/RichTextLabel

func _ready():
	p.visible = false

func display(text:String, at:Node2D, wait_time=3.0):
	p.visible = true
	t.bbcode_text = text
	$Timer.stop()
	if wait_time > 0:
		$Timer.wait_time = wait_time
		$Timer.start()
	call_deferred(\"reparent\",at)

func reparent(at:Node2D):
	var pos = at.get_global_transform_with_canvas().get_origin()
	p.rect_position = pos

func dismiss():
	p.visible = false
	emit_signal(\"dismissed\")

func _on_Timer_timeout():
	dismiss()

func _input(event):
    if event is InputEventMouseButton:
        if event.pressed:
            dismiss()"

