signal dismissed

func render(id:String, number:int = -1):
	return
	var item = null #InventoryItem.load_by_id(id)
	$\"Modal/Panel/Name\".text = item.name
	$\"Modal/Panel/Desc\".text = item.description
	$\"Modal/Panel/Icon\".texture = item.icon
	if number == -1:
		$\"Modal/Panel/Count\".visible = false
	else:
		$\"Modal/Panel/Count\".visible = true
		$\"Modal/Panel/Count\".text = \"x\" + str(number)
		
func _ready():
	render(\"GOEEsNote\", 77)

func _on_Button_pressed():
	emit_signal(\"dismissed\")
	queue_free()
