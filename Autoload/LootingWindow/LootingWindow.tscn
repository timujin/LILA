script/source = "extends CanvasLayer

onready var windowitem = preload(\"res://Autoload/LootingWindow/LootingWindowItem.tscn\")
onready var container  = $\"Panel/MarginContainer/ScrollContainer/VBoxContainer\"


func clear():
	for x in container.get_children():
		x.queue_free()
		
func add_item(title:String, callback):
	var x = windowitem.instance()
	x.init(title, callback)
	container.add_child(x)
	x.connect(\"pressed\", self, \"close_if_empty\")
	
func close_if_empty():
	# TODO: is this a race condition?
	if container.get_child_count() == 1:
		$Panel.visible = false
	
func _ready():
	$Panel.visible = false"

